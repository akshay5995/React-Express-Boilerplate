{
    "apps": [
      {
        "name": "JournalHub",
        "script": "api/server.js",
        "watch": true,
        "instances": 1,
        "ignore_watch": [
          "logs",
          "node_modules",
          ".tmp",
          ".idea",
          ".vagrant",
          ".git",
          "mb.log",
          "mb1.log"
        ],
        "env": {
          "DEBUG": "fetch:request"
        },
        "log_file": "./logs/JournalHub.log",
        "out_file": "./logs/JournalHub.log",
        "err_file": "./logs/JournalHub.log"
      }
    ]
}